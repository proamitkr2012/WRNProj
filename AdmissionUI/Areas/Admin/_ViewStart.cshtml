@{
    if (CurrentUser != null)
    {
        if (CurrentUser.Roles.Contains("Admin"))
        {
            Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
        }

        if (CurrentUser.Roles.Contains("Emp"))
        {
            Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
        }
     
    }
    else
    {
        Layout = "~/Areas/Admin/Views/Shared/_PublicLayout.cshtml";
    }
}