<script>
    // step-1
    const captcha = new Captcha($('#canvas'), {
        length: 4
    });
    // api


    $('#btnlwait').hide();
    $('#btnl').show();
    function SubmitLoginForm() {
        flag = true;
        if ($.trim($("#Email").val()) == "") {
            $("#Email").addClass("input-validation-error");
            flag = false;
        }
        else {
            $("#Email").removeClass("input-validation-error");
        }
        if ($.trim($("#Password").val()) == "") {
            $("#Password").addClass("input-validation-error");
            flag = false;
        }
        else {
            $("#Password").removeClass("input-validation-error");
        }

        /* ------------for capcha------------*/
        //const ans = captcha.valid($('input[name="code"]').val());
        //if (ans == false) {
        //    flag = false;
        //    $("#captcha").addClass("input-validation-error");
        //} else {
        //    $("#captcha").removeClass("input-validation-error");
        //}

        if (flag) {
            var obj = {
                Email: $("#Email").val(),
                Password: $("#Password").val(),
            };
            //alert(JSON.stringify(obj))
            $.ajax({
                type: "POST",
                contentType: "application/json; charset=utf-8",
                url: '@Url.Action("Login", "Account",new{area = "Admin"})',
                data: JSON.stringify(obj),
                dataType: "json",
                beforeSend: function () {
                    // setting a timeout
                    $('#btnlwait').show();
                    $('#btnl').hide();
                },
                success: function (data) {
                    //$('#emailerror').html("");
                    //$('#moberror').html("");

                    if (data == "1") {
                        $('#emailerror').html("This Email is already Exits");
                        $('#ResEmail').css("margin-bottom", "0px");
                    }


                    if (data == "success") {
                        //$("#alertModel").modal('show');
                        //$('.modal-body > p > span').html('');
                        //$('.modal-body > p > span').html('Thanks for sharing your details with us. We will get back to you soon!');
                        //$("#Name").val("");
                        window.location.href = "@Url.Action("index", "dashboard",new {area="Admin"})";
                        $("#Enrollment").val("");

                    }
                    else {

                        Swal.fire({
                            position: 'center',
                            icon: 'error',
                            title: 'Invalid Login Details!',
                            showConfirmButton: false,
                            timer: 3000
                        })
                    }
                },
                error: function (result) {
                    alert('Service call failed: ' + result.status + ' Type :' + result.statusText);
                },
                complete: function () {
                    setTimeout(function () {
                        $('#btnlwait').hide();
                        $('#btnl').show();
                    }, 0);
                },
            });
        }
    }

</script>