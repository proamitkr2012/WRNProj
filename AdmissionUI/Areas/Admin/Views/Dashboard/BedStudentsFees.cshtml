@model SearchStudentModel
@{
    ViewData["Title"] = "StudentNewAdded"; ViewData["ActiveMenu"] = "BedList";
}

<!-- Simple Datatable start -->
<div class="card-box mb-30">
    <div class="pd-20">
        <h4 class="text-blue h4">Student Courses and  Fees List</h4>

    </div>
    <div class="pb-20">
        <table class="data-table table stripe hover nowrap">
            <thead>
                <tr>

                    <th class="table-plus datatable-nosort">WRN</th>
                    <th>Roll</th>
                    <th>Name</th>
                    <th>Amount</th>
                    <th>Courses</th>
                    <th>Father Name</th>
                    <th>Mother Name</th>
                    <th>Gender</th>
                    <th>DOB</th>
                    <th>PaidDate</th>
                    <th>AppNo</th>
                    

                </tr>
            </thead>
            <tbody>
                @if (Model.studentList != null && Model.studentList.Count > 0)
                {
                    foreach (var item in Model.studentList)
                    {
                        <tr>

                            <td class="table-plus">@item.WRN</td>
                            <th>@item.Roll</th>
                            <td>@item.Name</td>
                            <th>@item.Amount</th>
                            <th>B.Ed.</th>
                            
                            <td>@item.FatherName</td>
                            <td>@item.MotherName</td>
                            <td>@item.Gender</td>
                            
                            <td>@item.DOB.Value.ToString("dd MMM yyyy")</td>

                            <td>@item.PaymentDate</td>
                            <td>@item.ApplicationNo</td>
                        </tr>
                    }



                }

            </tbody>
        </table>
    </div>
</div>
