@model StudentChoosedSubjectModel
@{
    ViewData["Title"] = "AdmissionForm";
}


<form asp-action="" asp-controller="StudentCourse" method="post">

    <div class="container p-3">
        <ul class="steps">
            <li class="step">
                <div class="step-content">
                    <span class="step-circle">1</span>
                    <span class="step-text">Profile</span>
                </div>

            </li>

            <li class="step">
                <div class="step-content">
                    <span class="step-circle">2</span>
                    <span class="step-text">Qualification</span>
                </div>

            </li>
            <li class="step">
                <div class="step-content">
                    <span class="step-circle">4</span>
                    <span class="step-text">Weightage</span>
                </div>

            </li>
            <li class="step">
                <div class="step-content">
                    <span class="step-circle">5</span>
                    <span class="step-text">Photo</span>
                </div>

            </li>
            <li class="step">
                <div class="step-content">
                    <span class="step-circle">6</span>
                    <span class="step-text">Add Course</span>
                </div>

            </li>

            <li class="step">
                <div class="step-content">
                    <span class="step-circle">7</span>
                    <span class="step-text">College Selection</span>
                </div>

            </li>


        </ul>


        <div class="text-center mt-5">
            <h2>Admission Cum Web Registration Form - (2023)</h2>

        </div>
        <div class="card">
            <div class="card-header bg-primary text-white">
                Registration
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    Apply for Course
                </h5>
                <hr />


                @if (Model.Status < 0)
                {
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <span class="text-danger" style="font-weight:bold">@Model.Msg</span>
                            </div>
                        </div>
                    </div>
                }


                <div class="row">


                    <div class="col-sm-12 text-center border  p-2">
                        @Html.HiddenFor(x=>x.EncrptedData)
                        @Html.HiddenFor(x=>x.ApplicationNo)
                        
                        <table class="data-table table table-bordered stripe hover nowrap">
                            <thead>
                                <tr>
                                    <th class="table-plus datatable-nosort">Sr.No.</th>
                                    <th>Code  </th>
                                    <th>College  </th>
                                    <th>Course  </th>
                                    <th>Main Subject</th>
                                    <th>Co-Curricular Subject </th>
                                    <th>Skill Development Subject </th>
                                    @*<th colspan="2">Action</th>*@

                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var srno = 0;
                                    var total = 0;
                                }
                                @if (Model.studentSubjects != null && Model.studentSubjects.Count > 0)
                                {


                                    foreach (var item in Model.studentSubjects)
                                    {
                                        <tr>
                                            <td class="table-plus">@(srno + 1)</td>
                                            <td>@item.CCode</td>
                                            <td style="text-align:left"><p style="text-align:justify-all;font-weight:bold">@item.CollegeName</p></td>

                                            <td class="table-plus">@item.CourseName</td>
                                            <td>
                                                @item.Subject
                                            </td>
                                            <td>
                                                @item.CoSubject
                                            </td>
                                            <td>
                                                @item.SkillSubject

                                                <input type="hidden" asp-for="@Model.studentSubjects[srno].ApplicationNo" />
                                                <input type="hidden" asp-for="@Model.studentSubjects[srno].CourseId" />
                                                <input type="hidden" asp-for="@Model.studentSubjects[srno].CCode" />
                                            </td>


                                        </tr>
                                        srno = srno + 1;

                                    }
                                }

                            </tbody>
                        </table>

                    </div>
                    <div class="col-md-2   offset-md-3 mt-4">
                        <a asp-action="stdsubjectSelection" asp-controller="StudentCourse" asp-route-tid="@Model.EncrptedData" class="btn btn-danger btn-block text-white">Back</a>

                    </div>
                    <div class="col-md-4 mt-4">
                        <a asp-action="stdformprev" asp-controller="StudentCourse" asp-route-tid="@Model.EncrptedData" class="btn btn-success btn-block  text-white">Previw Form</a>

                        @*<input type="submit" class="btn btn-success btn-block text-white"
                               id="btnl" name="commandName" value="Save&Next" />*@

                    </div>
                </div>



            </div>
        </div>


    </div>

</form>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
 


 